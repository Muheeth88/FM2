{
    "framework": "playwright",
    "language": "python",
    "engine": "pytest",
    "version": "1.0",
    "variables": {
        "PROJECT_NAME": {
            "required": true,
            "default": "playwright-py-project"
        }
    },
    "folders": [
        {
            "path": "pages",
            "gitkeep": true
        },
        {
            "path": "tests",
            "gitkeep": true
        },
        {
            "path": "utils",
            "gitkeep": true
        }
    ],
    "files": [
        {
            "path": "requirements.txt",
            "type": "fragment",
            "source": "requirements_playwright_py.txt"
        },
        {
            "path": "pytest.ini",
            "type": "inline",
            "content": "[pytest]\naddopts = -v --base-url {{BASE_URL}}\ntestpaths = tests"
        },
        {
            "path": "tests/test_example.py",
            "type": "fragment",
            "source": "example_test_py.txt"
        },
        {
            "path": ".github/workflows/playwright.yml",
            "type": "fragment",
            "source": "ci_playwright_py.yml"
        },
        {
            "path": "README.md",
            "type": "fragment",
            "source": "readme_playwright_py.md"
        },
        {
            "path": ".gitignore",
            "type": "inline",
            "content": "__pycache__/\n.pytest_cache/\n.env\nvenv/\n.venv/\n*.pyc"
        }
    ],
    "post_install": [
        "pip install -r requirements.txt",
        "playwright install"
    ]
}